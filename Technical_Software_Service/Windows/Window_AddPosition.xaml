<Window x:Class="Technical_Software_Service.Window_AddPosition"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Technical_Software_Service"
        mc:Ignorable="d"
       Title="Добавление должности" Height="200" Width="400">
    <Grid>
        <StackPanel>
            <StackPanel Orientation="Vertical" HorizontalAlignment="Left" Margin="25">
                <TextBlock Text="Введите должность" FontSize="18px" HorizontalAlignment="Left" VerticalAlignment="Center" FontFamily="Manrope"/>
                <TextBox Name="tbPositions" FontSize="16px" FontFamily="Manrope" Height="30" Width="350" Background="#F5C0A3"/>
            </StackPanel>
            <WrapPanel HorizontalAlignment="Center">
                <Button Name="btnCanel" Content="Отмена" Width="100" Style="{StaticResource Button}" Click="btnCanel_Click"/>
                <Button Name="btnSave" Content="Добавить" Width="100" Style="{StaticResource Button}" Click="btnSave_Click"/>
            </WrapPanel>
        </StackPanel>
    </Grid>
</Window>
